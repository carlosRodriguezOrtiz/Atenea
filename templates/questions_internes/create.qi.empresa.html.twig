{% extends 'base.html.twig' %}
{% block title %}
    {{ title }}{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <section class="bg-white text-black mt-3 mb-3">
        <div class="container ">
            <section class="row ">
                <div class="col-md-8"></div>
                <div class="col-md-4">
                    <div class="btn-group float-right mt-2 mb-3" role="group">
                        <a class="btn btn-danger btn-md" href="{{path('qi_listEmpresas', { 'id' : id })}}">&laquo; Torna</a>
                    </div>
                </div>
            </section>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-sm-8">
                        <div class="card d-flex ">
                            <div class="card-header bg-danger text-white">
                                 <h4>{{ title }}</h4>
                            </div>
                            <div class="card-body">
                                <div class="col-12 ">
                                    {{ form_start(form) }}
                                    {{ form_widget(form) }}
                                    {{  form_end(form ) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}