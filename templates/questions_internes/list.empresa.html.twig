{% extends 'base.html.twig' %}
{% block title %}Listado de las Cuestiones Internas
{% endblock %}
{% block body %}
    <section class="bg-white text-black mb-0">
        <section class="container-fluid">
            <section class="row">
                <section class="col-md-12">
                    <a class="btn btn-primary mb-3 mt-3" href="{{ path('crearQiEmpresa', {'id': id }) }}">Crear nueva Cuesti√≥n Interna</a>
                    <a class="btn btn-danger btn-md" href="{{ path('gestion_contextoEmpresa', { 'id' : id }) }}">&laquo; Volver</a>
                    <table class="table table-responsive-sm">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Tipo</th>
                                <th scope="col">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>

                            {% for questions_internes in qis %}
                                <tr>
                                
                                    <th scope="row">{{questions_internes.id}}</th>
                                    <th scope="row">{{questions_internes.nombre}}</th>

                                    <th scope="row">{{questions_internes.tipus.descripcion}}</th>
 
                                    <td>
                                        <a </span href="{{ path('qi_edit_empresa', {'id' : id, 'idQi': questions_internes.id}) }}" <span class="icon-pencil-alt text-black">Editar</a>
                                        <a </span href="{{ path('qi_deleteEmpresa', {'id' : id, 'idQi': questions_internes.id}) }}" <span class="icon-trash-empty text-black">Eliminar</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </section>
            </section>
        </section>
    </section>
{% endblock %}